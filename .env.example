# APIWeaver Environment Configuration
# Copy this file to .env and customize for your deployment

# ===========================================
# Application Configuration
# ===========================================
VERSION=1.0.0
COMMIT_SHA=dev
BUILD_TIME=2024-01-01T00:00:00Z

# Server Configuration
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info

# ===========================================
# MongoDB Configuration
# ===========================================
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=apiweaver123
MONGODB_DATABASE=apiweaver
MONGODB_PORT=27017
MONGODB_TIMEOUT=10s

# Data Persistence Paths
MONGODB_DATA_PATH=./data/mongodb
APIWEAVER_DATA_PATH=./data/apiweaver
APIWEAVER_LOGS_PATH=./logs

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-at-least-32-characters-long
API_KEY_HEADER=X-API-Key
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# Feature Flags
# ===========================================
ENABLE_API_KEYS=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true

# ===========================================
# Performance Configuration
# ===========================================
MAX_UPLOAD_SIZE=10MB
REQUEST_TIMEOUT=30s
WORKER_POOL_SIZE=10

# ===========================================
# MongoDB Express (Development)
# ===========================================
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123
MONGO_EXPRESS_PORT=8081

# ===========================================
# Nginx Reverse Proxy (Production)
# ===========================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ===========================================
# Development/Debug Configuration
# ===========================================
# Set to development to enable debug features
NODE_ENV=production

# Enable to see MongoDB connection logs
MONGODB_DEBUG=false

# Enable to see detailed application logs
DEBUG=false

# ===========================================
# SSL Configuration (Production)
# ===========================================
# SSL_CERT_PATH=./ssl/cert.pem
# SSL_KEY_PATH=./ssl/key.pem
# SSL_CA_PATH=./ssl/ca.pem

# ===========================================
# Monitoring & Observability
# ===========================================
# PROMETHEUS_METRICS_PORT=9090
# GRAFANA_PORT=3000
# JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# ===========================================
# Backup Configuration
# ===========================================
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=apiweaver-backups
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1